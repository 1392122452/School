@model ForumWeb.Models.User

@{
    ViewData["Title"] = "个人详情";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>用户ID：@Model.Id</h1>
            </div>
            <div class="card-body text-center">
                <h4>@Model.PhotoPath</h4>
                <h4>用户名：@Model.Name</h4>
                <h4>邮箱：@Model.Email</h4>
                <h4>手机号：@Model.Phone</h4>
                
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">返回</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">修改</a>
            </div>
        </div>

    </div>


    @section Scripts{

        <script src="~/js/CustomScript.js"></script>
    }

</div>
