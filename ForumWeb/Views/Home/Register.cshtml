@model ForumWeb.ViewModel.ForumRegisterViewModel
@inject IUserRepository _userRepository
@{
    ViewData["Title"] = "FOR论坛注册";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title> @ViewData["Title"]</title>
    <link href="~/css/login/style.css" media="screen" rel="stylesheet" />
    <link href="~/css/login/reset.css" type="text/css" rel="stylesheet" />

    
</head>
<body>
    

    @*<div id="particles-js">*@
    <div class="login">

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="login-top" style="margin-left:70px;margin-top:30px; font-size:21px;">
                @ViewData["Title"]
            </div>

            <div class="login-center clearfix" style="margin-top:-20px;">
                <div class="login-center-img"><img src="~/img/Name.png" /></div>
                <div class="login-center-input">
                   
                    @Html.TextBox("Name", "", new { @class = "input-block-small", maxlength = "320", minlength = "8",placeholder = "请输入账号" })
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <div style="font-size:18px;" id="loginIdTex" class="login-center-input-text">用户名</div>
                </div>
            </div>
            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/img/pwd1.png" /></div>
                <div class="login-center-input" typeof="password">
                    
                    @Html.TextBox("Pwd", "", new { @class = "input-block-small", type = "password", maxlength = "16", minlength = "8", placeholder = "请输入密码" })
                    <span asp-validation-for="Pwd" class="text-danger"></span>
                    <div style="font-size:18px;" id="loginPwdTex" class="login-center-input-text">密码</div>
                </div>
            </div>
            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/img/pwd2.png" /></div>
                <div class="login-center-input">
               
                    @Html.TextBox("Pwd", "", new { @class = "input-block-small", type = "password", maxlength = "16",minlength="8", placeholder = "请确认密码" })
                    <span asp-validation-for="Pwd" class="text-danger"></span>
                    <div style="font-size:18px;" id="loginPwdTex" class="login-center-input-text">确认密码</div>
                </div>
            </div>
            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/img/email.png" /></div>
                <div class="login-center-input">
                    
                    @Html.TextBox("Email", "", new { @class = "input-block-small", maxlength = "16", placeholder = "请输入邮箱" })
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div style="font-size:18px;" id="loginIdTex" class="login-center-input-text">邮箱</div>
                </div>
            </div>

            <div class="login-center clearfix">
                <div class="login-center-img"><img src="~/img/phone.png" /></div>
                <div class="login-center-input">
                    
                    @Html.TextBox("Phone", "", new { @class = "input-block-small", maxlength = "16", placeholder = "请输入手机号" })
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <div style="font-size:18px;" id="loginIdTex" class="login-center-input-text">手机号</div>
                </div>
            </div>

            <div class="login-center clearfix" style="margin-top:-20px">
                <div class="col-sm-10" style="font-size:18px;">
                    用户总人数=@_userRepository.GetAllUser().Count().ToString()
                </div>
            </div>

            <div class="login-center clearfix" style="margin-top:-30px;font-size:18px;">
                <input type="submit" class="login-button" value="注 册" data-loading-text="" tabindex="1" />
            </div>

        }
    </div>
            <div class="sk-rotating-plane"></div>

        <script src="~/lib/jquery/dist/jquery.js"></script>

        <script src="~/js/login/particles.min.js"></script>
        <script src="~/js/login/particles.min.js"></script>

</body>
</html>


