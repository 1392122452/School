using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace ForumWeb.Models
{
    public interface IForumRepository
    {
        /// <summary>
        /// 通过帖子的ID来查询帖子信息
        /// </summary>
        /// <param name="id"></param>
        /// <returns></returns>
        Forums GetForums(int id);

        /// <summary>
        /// 获取所有的帖子信息
        /// </summary>
        /// <returns></returns>
        IEnumerable<Forums> GetAllForums();


    }
}
